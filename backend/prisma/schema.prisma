generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [timescaledb]
}

enum Status {
  ACTIVE
  INACTIVE
  MAINTENANCE
  AWAITING
}

enum Identifier {
  CELSIUS
  FAHRENHEIT
  PERCENTAGE
  ON_OFF
}

enum AlertType {
  ERROR
  WARNING
  INFO
}

model Device {
  uuid         String   @id @default(uuid()) @db.Uuid
  name         String
  locationUuid String   @db.Uuid
  status       Status?  @default(AWAITING)
  frequency    Int
  token        String?  @unique
  createdAt    DateTime @default(now()) @db.Timestamptz()
  updatedAt    DateTime @updatedAt @db.Timestamptz()

  Location   Location     @relation(fields: [locationUuid], references: [uuid])
  Timeseries Timeseries[]
  Alert      Alert[]
}

model Location {
  uuid      String   @id @default(uuid()) @db.Uuid
  name      String  @unique
  createdAt DateTime @default(now()) @db.Timestamptz()
  updatedAt DateTime @updatedAt @db.Timestamptz()

  devices Device[]
}

model Timeseries {
  id         Int        @id @default(autoincrement())
  value      Float
  identifier Identifier
  name       String?
  deviceId   String     @db.Uuid
  locationId String     @db.Uuid
  createdAt  DateTime   @default(now()) @db.Timestamptz()
  updatedAt  DateTime   @updatedAt @db.Timestamptz()

  @@index([identifier], name: "idx_identifier")
  @@index([deviceId], name: "idx_deviceId")
  @@index([locationId], name: "idx_locationId")
  @@index([deviceId, createdAt], name: "idx_deviceId_createdAt")
  @@index([locationId, createdAt], name: "idx_locationId_createdAt")
  @@index([identifier, createdAt], name: "idx_identifier_createdAt")

  Device          Device            @relation(fields: [deviceId], references: [uuid])
  TimeseriesAlert TimeseriesAlert[]
}

model Alert {
  uuid        String     @id @default(uuid()) @db.Uuid
  name        String
  description String
  type        AlertType
  threshold   Float
  identifier  Identifier
  deviceId    String     @db.Uuid
  createdAt   DateTime   @default(now()) @db.Timestamptz()
  updatedAt   DateTime   @updatedAt @db.Timestamptz()

  Device          Device            @relation(fields: [deviceId], references: [uuid])
  TimeseriesAlert TimeseriesAlert[]
}

model TimeseriesAlert {
  id           Int      @id @default(autoincrement())
  alertId      String   @db.Uuid
  timeseriesId Int
  createdAt    DateTime @default(now()) @db.Timestamptz()
  updatedAt    DateTime @updatedAt @db.Timestamptz()

  Alert      Alert      @relation(fields: [alertId], references: [uuid])
  Timeseries Timeseries @relation(fields: [timeseriesId], references: [id])
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  initials  String
  name      String
  email     String   @unique
  username  String   @unique
  password  String
  active    Boolean  @default(true)
  createdAt DateTime @default(now()) @db.Timestamptz()
  updatedAt DateTime @updatedAt @db.Timestamptz()

  sessions        Session[]
  UserPermissions UserPermissions[]
}

model Session {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     Token[]
  expiresAt DateTime
}

model Token {
  id           String   @id @default(uuid()) @db.Uuid
  sessionId    String   @db.Uuid
  session      Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  accessToken  String   @unique
  refreshToken String   @unique
  createdAt    DateTime @default(now())
}

model UserPermissions {
  id           String   @id @default(uuid()) @db.Uuid
  userId       String   @db.Uuid
  permissionId String   @db.Uuid
  assignedAt   DateTime @default(now())
  assignedBy   String

  Permission Permission @relation(fields: [permissionId], references: [id])
  User       User       @relation(fields: [userId], references: [id])
}

model PermissionGroup {
  id        String   @id @default(uuid()) @db.Uuid
  name      String
  createdAt DateTime @default(now()) @db.Timestamptz()
  updatedAt DateTime @updatedAt @db.Timestamptz()

  Permissions Permission[]
}

model Permission {
  id                String   @id @default(uuid()) @db.Uuid
  code              String
  description       String
  createdAt         DateTime @default(now()) @db.Timestamptz()
  updatedAt         DateTime @updatedAt @db.Timestamptz()
  permissionGroupId String   @db.Uuid

  UserPermissions UserPermissions[]

  PermissionGroup PermissionGroup @relation(fields: [permissionGroupId], references: [id])
}
